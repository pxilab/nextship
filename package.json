{
  "name": "@pxilab/nextship",
  "version": "0.1.1",
  "description": "Next.js deployment tool - Build, SSH upload, PM2 restart",
  "type": "module",
  "bin": {
    "pxnship": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "format": "biome format --write src/"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "ssh2": "^1.16.0",
    "nanospinner": "^1.2.2",
    "picocolors": "^1.1.1",
    "zod": "^3.24.0",
    "execa": "^9.5.1",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/ssh2": "^1.15.1",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "tsup": "^8.3.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pxilab/nextship.git"
  },
  "keywords": [
    "nextjs",
    "deployment",
    "ssh",
    "pm2",
    "rsync",
    "cli"
  ],
  "author": "PXI Lab",
  "license": "MIT"
}
